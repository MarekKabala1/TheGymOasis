---
import Layout from '@layouts/Layout.astro';
import Card from '@components/Card.astro';
import Nav from '@components/Nav.astro';
import Image from 'astro/components/Image.astro';
---

<Layout title='The Gym Oasis'>
	<Nav />
	<main>
		<h1>
			Welcome to<br />
			<span class='text-gradient'>Suplements and Vitamins</span><br /> shop
		</h1>
		<p class='instructions'>
			Best shop in Watford with <code>Suplements and Vitamins</code> for You and
			Your body.<br />
			Come and visit our shop in <strong>73 Sydney Road WD18 7ES</strong>
		</p>
		<ul role='list' class='link-card-grid'>
			<Card
				href='https://docs.astro.build/'
				title='Trec Proteins'
				img='public/trec-logo.jpg'
				body='Learn how Astro works and explore the official API docs.'
			/>
			<Card
				href='https://astro.build/integrations/'
				title='Usn Proteins'
				img='public/usn.png'
				body='Supercharge your project with new frameworks and libraries.'
			/>
			<Card
				href='https://astro.build/themes/'
				title='Vitamins for him/her'
				img='public/vitamins.jpg'
				body='Explore a galaxy of community-built starter themes.'
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 2rem;
		font-weight: 800;
		text-align: center;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		text-align: center;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
